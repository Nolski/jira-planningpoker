<!doctype html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Planning Poker - Games List</title>
	<link href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:200,300' rel='stylesheet' type='text/css'>
	<link rel="stylesheet" href="css/bootstrap-glyphicons.css">
	<link rel="stylesheet" href="css/bootstrap.min.css">
	<link rel="stylesheet" href="css/join.css">
	<script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
	<script src="js/join.js"></script>
</head>
<body>
	<div class="join panel">
		<span class="glyphicon glyphicon-cog" id="settings"></span>
		<div id="games-list" class="list-group">
			<div>
			<% @games.each do |game| %>
				<div class="list-group-item">
					<span class="glyphicon glyphicon-remove" id="<%= game.id %>"></span>
					<a href="showgame?id=<%= game.id %>"><%=game.name %></a>
				</div>
			<% end %>
			</div>
		</div>
		<div class="input-group">
			<input id="new" type="text" class="form-control form-input" placeholder="Game Name" name="game" />
			<span class="input-group-btn">
				<button id="new-btn" class="btn btn-default" type="button">Create</button>
			</span>
		</div><!-- /input-group -->
	</div>
	<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
					<h4 class="modal-title">Admin Settings</h4>
				</div>
				<div class="modal-body">
					<form action="">
						<input type="text" class="form-control" placeholder="Jira URL" />
					</form>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
					<button type="button" class="btn btn-primary">Save changes</button>
				</div>
			</div><!-- /.modal-content -->
		</div><!-- /.modal-dialog -->
	</div><!-- /.modal -->
</body>
</html>